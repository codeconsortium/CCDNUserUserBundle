{% extends 'CCDNUserUserBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_user_user.registration.register.layout_template %}

{% block title %}{{- 'title.register.register'|trans({}, 'CCDNUserUserBundle') -}}{% endblock %}

{%- block crumb_trail -%}
	{%- spaceless -%}
		<ol class="breadcrumb">
			<li>
				<a href="{{- path('ccdn_user_user_registration_terms') -}}">
					Agreement
				</a>
			</li>
			<li>
				<a href="{{- path('fos_user_registration_register') -}}">
					Register
				</a>
			</li>
		</ol>
	{%- endspaceless -%}
{%- endblock crumb_trail -%}

{% block body_content %}

	{%- spaceless -%}
	
	<section>
		{%- form_theme form ccdn_user_user.registration.register.form_theme -%}
		<form action="{{- path('fos_user_registration_register') -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
			<fieldset>

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<h4>{{- 'title.register.register'|trans({}, 'CCDNUserUserBundle') -}}</h4>
					</div>
				</div>
				
				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<input type="submit" class="btn btn-primary" value="{{- 'registration.submit'|trans({}, 'FOSUserBundle') -}}">
					</div>
				</div>

			</fieldset>
		</form>
	</section>
	
	{%- endspaceless -%}

{% endblock body_content %}
