{% extends 'CCDNUserUserBundle:Layout:user_bundle_layout_body_left.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}CCDN Account.{% endblock %}

{% block sidebar %}
	{{ parent() }}

	{% include 'CCDNUserUserBundle:Sidebar:sidebar.html.twig' %}

{% endblock %}

{% block body %}

{% for key, message in app.session.getFlashes() %}
<div class="bg_flash_message">
	<div class="flash_{{ key }}">
	    {{ message | trans({}, 'FOSUserBundle') }}
	</div>
</div>
{% endfor %}

<div class="section_wrap_standalone">
	<div class="section_header">
		<h2></h2>
	</div>

	<div class="section_panel">
		{% include "FOSUserBundle:Group:new_content.html.twig" %}
	</div>
</div>

{% endblock body %}
